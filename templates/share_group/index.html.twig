{% extends 'base.html.twig' %}

{% block title %}ShareGroup index{% endblock %}

{% block body %}
    <h1>ShareGroup index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Slug</th>
                <th>CreatedAt</th>
                <th>Closed</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for share_group in share_groups %}
            <tr>
                <td>{{ share_group.id }}</td>
                <td>{{ share_group.slug }}</td>
                <td>{{ share_group.createdAt ? share_group.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ share_group.closed ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('share_group_show', {'id': share_group.id}) }}">show</a>
                    <a href="{{ path('share_group_edit', {'id': share_group.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('share_group_new') }}">Create new</a>
{% endblock %}
